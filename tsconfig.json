{
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ES2015"],
    "types": ["node"],
    "noEmit": true
  },
  "include": ["src/**/*", "examples/**/*"]
}